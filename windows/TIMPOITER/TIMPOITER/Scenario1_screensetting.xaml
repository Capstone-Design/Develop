        <TextBox x:Name="TextBox_y" HorizontalAlignment="Left" Margin="417,80,0,-112" Grid.RowSpan="2" Text="TextBox" VerticalAlignment="Top" IsReadOnly="True"/>
        <TextBox x:Name="screensize_x" HorizontalAlignment="Left" Margin="275,158,0,-190" Grid.RowSpan="2" Text="TextBox" VerticalAlignment="Top"/>
